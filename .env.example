# ========================================
# Radar Dashboard - Environment Configuration
# ========================================

# LLM Configuration
# Choose your LLM provider: openai, ollama, or macmind

# OpenAI (requires API key from https://platform.openai.com)
VITE_LLM_PROVIDER=openai
VITE_OPENAI_API_KEY=sk-your-key-here
VITE_OPENAI_MODEL=gpt-4-turbo-preview

# Ollama (local models, install from https://ollama.ai)
# VITE_LLM_PROVIDER=ollama
# VITE_OLLAMA_ENDPOINT=http://localhost:11434
# VITE_OLLAMA_MODEL=llama2

# MacMind (custom endpoint)
# VITE_LLM_PROVIDER=macmind
# VITE_MACMIND_ENDPOINT=http://localhost:8000
# VITE_MACMIND_API_KEY=
# VITE_MACMIND_MODEL=your-model

# API Configuration
VITE_API_BASE_URL=

# OAuth Configuration
# Get credentials from respective developer consoles

# Google OAuth (https://console.cloud.google.com/apis/credentials)
VITE_GOOGLE_CLIENT_ID=

# GitHub OAuth (https://github.com/settings/developers)
VITE_GITHUB_CLIENT_ID=

# Telegram Bot (https://t.me/botfather)
VITE_TELEGRAM_BOT_TOKEN=

# Feature Flags
VITE_ENABLE_LLM=true
VITE_ENABLE_POLICIES=true
VITE_ENABLE_WEBHOOKS=true
VITE_ENABLE_OBSERVER_BOT=true
VITE_ENABLE_AUTO_PRIORITIZATION=true

# Application Settings
VITE_APP_NAME=Radar Dashboard
VITE_APP_VERSION=0.1.0

# Debug Settings
VITE_DEBUG=false
VITE_LOG_SPANS=true
